<div class="flex flex-col justify-center gap-4 px-4">
    <article
        class="flex flex-col items-start justify-center w-full max-w-2xl mx-auto mt-4 mb-16 prose content dark:prose-invert ">
        <h1 class="mb-4 text-5xl font-bold tracking-tight text-black lg:text-7xl dark:text-white">
            <%= page.title %>
        </h1>
        <div class="flex justify-between w-full">
            <p class="block ml-2 text-sm text-gray-700 dark:text-gray-300">
                <%- page.author ? `${page.author} / ` : "" %> <%-full_date(page.date, "MMMM DD, YYYY" )%>
            </p>
            <p class="block ml-2 text-sm text-gray-700 dark:text-gray-300">
                <%- page.reading_time ? `${page.reading_time} read` : '' %>
            </p>
        </div>
        <%-page.content%>
</div>