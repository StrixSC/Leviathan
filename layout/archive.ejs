<div class="main-archives-container">
    <% const res=filterPostsByYear(site.posts); 
    const sitePosts=res[0]; 
    const archivePosts=res[1]; 
    let keys=Object.keys(archivePosts).sort((a, b)=> {
        return theme.sort_descending ? (b - a) : (a - b)
    });
    %>
        <div class="archive-post-container">
            <% sitePosts.forEach((post) => { %>
                <div class="archive-post-item">
                    <h3 class="archive-post-item-title">
                        <%=post.title%>
                    </h3>
                    <h4 class="archive-post-date uppercased">
                        <%=full_date(post.date, "MMM DD, YYYY")%>
                    </h4>
                    <div class="archive-post-item-teaser">
                        <%- post.content.split("\n")[0] %>
                    </div>

                    <h4 class="archive-post-readmore-headline">
                        <a class="clickable archive-post-readmore-anchor" 
                        href="<%- url_for(post.path)%>">Read</a>
                    </h4>
                </div>

           <%})%>
        </div>
        <div class="main-archive-list-container">
                <% for(const year of keys) { %>
                <div class="archive-list-year">
                    <%=year%>
                </div>
                <div class="archive-list-yearly-content-container">
                    <% archivePosts[year].forEach((post)=> { %>
                        <div class="archive-list-yearly-content-item">
                            <div class="archive-list-yearly-content-item-date" <% if(theme.accent_color) {%>
                                style="color: #<%=theme.accent_color%>"
                                    <%}%>
                                        >
                                        <%- full_date(post.date, "MMM DD, YYYY" )%>
                            </div>

                            <div class="archive-list-yearly-content-item-title">
                                <a href="<%- url_for(post.path) %>" class="clickable archive-list-post-url">
                                    <%=truncate(post.title)%>
                                </a>
                            </div>
                        </div>
                        <%})%>
                </div>
                <% }%>
        </div>
</div>
<div class="main-blogposts-container"></div>
</div>