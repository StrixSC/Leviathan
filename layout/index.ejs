<div class="w-full p-8 mx-auto text-white lg:p-0 lg:w-1/2">
       <div class="flex flex-col gap-6">
              <% page.posts.each(post=> { %>
                     <div class="pb-2 border-b-2 border-1 border-neutral-900">

                            <div class="text-2xl font-bold"><a href="<%-url_for(post.link)%>"><%- post.title %></a>
                            </div>
                            <div class="flex gap-2 text-lg font-light text-neutral-600">
                                   <div> <%-full_date(post.date, "MMMM DD, YYYY" )%></div>
                                   <% if(post.reading_time || post.author) { %>
                                          <div>
                                                 <% if (post.reading_time) { %>
                                                        by <%-post.author%>
                                                               <% } %>

                                                                      <% if (post.reading_time) { %>
                                                                             &CenterDot; <%-post.reading_time%> read
                                                                                    <% } %>
                                          </div>
                                          <% } %>
                            </div>
                            <div class="mt-4 text-lg font-normal text-justify">
                                   <%- post.excerpt %>
                            </div>
                            <div class="my-4 text-lg font-normal ">
                                   <a href="<%-url_for(post.link)%>">Read</a>
                            </div>
                     </div>
                     <% }) %>
       </div>
</div>
</div>